<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="handlers"
            type="cf.vozhuo.app.broswser.MenuDialogFragment"/>
    </data>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CheckBox
                android:id="@+id/mark"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:button="@null"
                android:drawableTop="@drawable/mark"
                android:onClick="@{handlers::onClick}"
                android:text="@string/mark"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/download"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:button="@null"
                android:drawableTop="@drawable/download"
                android:onClick="@{handlers::onClick}"
                android:text="@string/download"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/refresh"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:button="@null"
                android:drawableTop="@drawable/refresh"
                android:onClick="@{handlers::onClick}"
                android:text="@string/refresh"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/setting"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:button="@null"
                android:drawableTop="@drawable/setting"
                android:onClick="@{handlers::onClick}"
                android:text="@string/settings"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <CheckBox
                android:id="@+id/collect"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:button="@null"
                android:drawableTop="@drawable/bg_collect"
                android:onClick="@{handlers::onClick}"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/track"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:button="@null"
                android:drawableTop="@drawable/bg_seen"
                android:onClick="@{handlers::onClick}"
                android:text="@string/noTrack"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/setImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:button="@null"
                android:drawableTop="@drawable/bg_image"
                android:onClick="@{handlers::onClick}"
                android:text="@string/noImage"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/dark"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:button="@null"
                android:drawableTop="@drawable/bg_dark"
                android:onClick="@{handlers::onClick}"
                android:text="@string/night"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>