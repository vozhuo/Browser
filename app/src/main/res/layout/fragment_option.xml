<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="handlers"
            type="cf.vozhuo.app.broswser.BottomDialogFragment"/>
    </data>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <CheckBox
                android:id="@+id/setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/setting"
                android:paddingTop="18dp"
                android:text="@string/settings"
                android:onClick="@{handlers::onClick}"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/setImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/bg_image"
                android:paddingTop="18dp"
                android:layout_margin="5dp"
                android:text="@string/noImage"
                android:onClick="@{handlers::onClick}"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/mark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/mark"
                android:paddingTop="18dp"
                android:layout_margin="5dp"
                android:text="@string/mark"
                android:onClick="@{handlers::onClick}"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/dark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/bg_dark"
                android:paddingTop="18dp"
                android:text="@string/night"
                android:onClick="@{handlers::onClick}"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_margin="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/bg_collect"
                android:paddingTop="18dp"
                android:paddingBottom="8dp"
                android:onClick="@{handlers::onClick}"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/track"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textAlignment="center"
                android:text="@string/noTrack"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:onClick="@{handlers::onClick}"
                android:paddingTop="18dp"
                android:paddingBottom="8dp"
                android:drawableTop="@drawable/bg_seen" />

            <CheckBox
                android:id="@+id/refresh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="18dp"
                android:paddingBottom="8dp"
                android:button="@null"
                android:textAlignment="center"
                android:text="@string/refresh"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:onClick="@{handlers::onClick}"
                android:drawableTop="@drawable/refresh" />

            <CheckBox
                android:id="@+id/download"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="18dp"
                android:paddingBottom="8dp"
                android:button="@null"
                android:textAlignment="center"
                android:text="@string/download"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:onClick="@{handlers::onClick}"
                android:drawableTop="@drawable/download" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
</layout>